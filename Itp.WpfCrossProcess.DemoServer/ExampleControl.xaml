<UserControl x:Class="Itp.WpfCrossProcess.DemoServer.ExampleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Itp.WpfCrossProcess.DemoServer"
             mc:Ignorable="d">
    <Border Background="#FFFFECEC">
        <DockPanel>
            <CheckBox DockPanel.Dock="Right" x:Name="checkBox" Content="CheckBox" Margin="7,0,0,0" VerticalAlignment="Center" 
                      IsChecked="{Binding ElementName=textBox, Path=IsFocused, Mode=OneWay}" />
            <TextBox x:Name="textBox" TextWrapping="Wrap" Text="TextBox" />
        </DockPanel>
    </Border>
</UserControl>
